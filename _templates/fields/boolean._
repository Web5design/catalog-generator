<label class="radio">
    <input type="radio" name="<%= json %>" data-field="<%= json %>" value="1`" class="field <%= json %> <%= json %>-true" <% if (value) { %>checked="checked"<% }%>> Yes
</label>
<label class="radio">
    <input type="radio" name="<%= json %>" data-field="<%= json %>" value="" class="field <%= json %> <%= json %>-false" <% if (value === false) { %>checked="checked"<% }%>> No
</label>
